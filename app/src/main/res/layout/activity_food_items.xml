<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exercise">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/l">
        <Button
            android:id="@+id/bt1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F6F6EB"
            android:text="Home"
            android:onClick="bee1Click"
            android:textAlignment="center"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bt2"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="About Us"
            android:onClick="bee2Click"
            android:background="#F6F6EB"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bt3"
            android:layout_width="110dp"
            android:onClick="bee3Click"
            android:layout_height="match_parent"
            android:background="#F6F6EB"
            android:text="Contact Us"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prof"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_below="@+id/l"
        android:id="@+id/l1">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fit" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Add/View Food Items"
            android:textAlignment="center"
            android:textColor="#FF487007"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:ignore="MissingConstraints"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#F6F6EB"
            android:cacheColorHint="#FF487007"
            android:scrollbarStyle="insideOverlay"
            android:textAlignment="center">

        </ListView>
        <Button
            android:id="@+id/bAdd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FF487007"
            android:text="(+)Add Food Item"
            android:textColor="#FFFFFA03"
            android:onClick="addFood"
            android:textSize="20sp"></Button>

    </LinearLayout>
</LinearLayout>