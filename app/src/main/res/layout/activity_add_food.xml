<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exercise">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/l">
        <Button
            android:id="@+id/bt1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F6F6EB"
            android:text="Home"
            android:onClick="bee1Click"
            android:textAlignment="center"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bt2"
            android:onClick="bee2Click"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="About Us"
            android:background="#F6F6EB"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bt3"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#F6F6EB"
            android:onClick="bee3Click"
            android:text="Contact Us"
            android:textColor="#FF487007"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prof"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_below="@+id/l"
        android:id="@+id/l1">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fit" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Add Food"
            android:textAlignment="center"
            android:textColor="#FF487007"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:ignore="MissingConstraints"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="40dp"
        android:paddingLeft="50dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et1"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:hint="Enter Food Name"
            android:outlineAmbientShadowColor="#FF032522"
            android:textAlignment="center"
            android:textColorHint="#487007"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/et2"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:hint="Enter Food Type"
            android:outlineAmbientShadowColor="#FF032522"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColorHighlight="#FF032522"
            android:textColorHint="#487007"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/et3"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="Enter Calories"
            android:inputType="textPassword"
            android:outlineAmbientShadowColor="#FF032522"
            android:textAlignment="center"
            android:textColorHint="#487007"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/l2"
        android:paddingLeft="65dp"
        android:paddingRight="65dp">

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#487007"
            android:text="Add"
            android:textColor="#FFFA03"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:background="#487007"
            android:text="cancel"
            android:textColor="#FFFA03"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>